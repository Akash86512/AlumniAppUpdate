<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_marginTop="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <RelativeLayout
        android:id="@+id/rellay1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/p" />

        <TextView
            android:id="@+id/name"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="110dp"
            android:layout_width="wrap_content"
            android:text="Ramakant shakya"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="300dp"
            android:layout_width="wrap_content"
            android:text="..."
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold"
            android:textSize="40sp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/time"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="110dp"
            android:layout_width="wrap_content"
            android:text="16 hours ago"
            android:textColor="@android:color/darker_gray"
            android:textStyle="normal"
            android:textSize="16sp"
            android:layout_height="wrap_content" />

        <TextView

            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:id="@+id/posttext"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:hint="Share your thoughts.Add photo or hashtags"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rellay2"
        android:layout_width="wrap_content"
        android:layout_below="@+id/rellay1"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/postImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/vkg5"

            android:layout_marginTop="5dp"

            />



    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rellay3"
        android:layout_below="@+id/rellay2"
        android:layout_marginTop="3dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="2dp"
            android:text="1 Likes."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>


    <View
        android:id="@+id/view1"
        android:layout_below="@+id/rellay3"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="#B8B894" />


    <ImageView
        android:id="@+id/like"
        android:layout_below="@+id/view1"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:background="@android:color/white"
        android:src="@drawable/outline_thumb_up_alt_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp" />
    <TextView
        android:layout_below="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="53dp"
        android:textStyle="bold"
        android:text="Like"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/comment"
        android:layout_below="@+id/view1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="125dp"
        android:background="@android:color/white"
        android:src="@drawable/outline_mode_comment_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp" />
    <TextView
        android:layout_below="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_marginTop="9dp"
        android:textStyle="bold"
        android:layout_marginLeft="168dp"
        android:text="Comment"
        android:layout_height="wrap_content" />


    <ImageView
        android:id="@+id/share"
        android:layout_below="@+id/view1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="265dp"
        android:background="@android:color/white"
        android:src="@drawable/outline_share_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp" />
    <TextView
        android:layout_below="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_marginTop="9dp"
        android:textStyle="bold"
        android:layout_marginLeft="309dp"
        android:text="Share"
        android:layout_height="wrap_content" />
    <View

        android:id="@+id/view2"
        android:layout_below="@+id/rellay3"
        android:layout_width="1dp"
        android:layout_marginLeft="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="#B8B894" />
    <View

        android:id="@+id/view3"
        android:layout_below="@+id/rellay3"
        android:layout_width="1dp"
        android:layout_marginLeft="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="#B8B894" />
    <View
        android:id="@+id/view4"
        android:layout_below="@+id/rellay3"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="60dp"
        android:background="#B8B894" />
    <View
        android:id="@+id/view5"
        android:layout_below="@+id/rellay3"
        android:layout_width="fill_parent"
        android:layout_height="7dp"
        android:layout_marginTop="61dp"
        android:background="#B8B894" />



</RelativeLayout>