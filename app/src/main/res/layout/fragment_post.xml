<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<RelativeLayout
    android:id="@+id/rellay1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/postprofileimage1"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/p" />

    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginLeft="120dp"
        android:layout_width="wrap_content"
        android:text="Ramakant shakya"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        android:id="@+id/postprofilename"
        android:layout_height="wrap_content" />
<EditText
    android:layout_marginTop="110dp"
    android:layout_width="match_parent"
     android:id="@+id/posttext"
    android:background="@null"
    android:layout_marginLeft="10dp"
    android:hint="Share your thoughts.Add photo or hashtags"
    android:layout_height="wrap_content" />
</RelativeLayout>
<RelativeLayout
    android:id="@+id/rellay2"
    android:layout_width="wrap_content"
    android:layout_below="@+id/rellay1"
    android:layout_marginTop="20dp"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/postprofileImage"
        android:layout_width="300dp"
        android:layout_height="200dp"

        android:layout_marginRight="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"

         />
</RelativeLayout>
    <View
        android:layout_below="@+id/rellay2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#B8B894" />
    <RelativeLayout
    android:layout_below="@+id/rellay2"
    android:layout_marginTop="15dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/btnSelectPhoto"
        android:background="@android:color/white"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_width="50dp"
        android:src="@drawable/ic_menu_camera"
        android:layout_height="wrap_content"
         />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="POST"
    android:id="@+id/post"
    android:textColor="@android:color/white"
    android:background="@color/colorPrimary"
    android:layout_marginLeft="250dp"
    android:layout_marginTop="20dp"/>
</RelativeLayout>

</RelativeLayout>